<h2><%= @movie.title %></h2>

<p class="center">Directed by <%= link_to @movie.director.name, director_path(@movie.director) %></p>
<p class="center">Starring: </p>

<div class="actors center">
  <% @movie.actors.each do |actor| %>
    <%= link_to actor.name, actor_path(actor) %> <br>
  <% end %>  
</div>