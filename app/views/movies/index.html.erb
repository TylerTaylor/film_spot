<% if @director %>
  <h2><%= @director.name %>'s Movies</h2>
<% else %>
  <h2>All Movies</h2>
<% end %>



<div class="center">
  <div class="movie-show-options"> 
    <%= link_to 'Most Viewed Movies', '/movies/most_viewed' %> <!-- movies#most_viewed_movies --> 
  </div>
  |
  <% if current_user %>
    <div class="movie-show-options">
      <%= link_to "Movies I've seen", user_viewed_movies_path(current_user) %> <!-- --> 
    </div>
  <% end %>
  |
  <div class="movie-show-options"> 
    <%= link_to 'Add Movie', new_movie_path %>
  </div>

</div> <br><br>


<div class="show-card">
  <% @movies.each do |movie| %>
    <%= link_to movie.title, movie_path(movie) %> <br><br>
  <% end %>

</div>

