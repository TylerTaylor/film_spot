<% if @director %>
  <h2><%= @director.name %>'s Movies</h2>
<% else %>
  <h2>All Movies</h2>
<% end %>

<div class="center">
  <div class="movie-show-options"> 
    <%= link_to 'Most Viewed Movies', '/movies/most_viewed' %>
  </div>
  | 
  <div class="movie-show-options"> 
    <%= link_to 'Add Movie', new_movie_path %>
  </div>
</div> <br><br>


<div class="show-card">
  <% @movies.each do |movie| %>
    <%= link_to movie.title, movie_path(movie) %> <br><br>
  <% end %>

</div>

