<div class="jumbotron">
  <h1>Welcome to FilmSpot!</h1>
  <p>Keep track of movies you've watched, or want to watch, and whether you liked them.</p>
  <%= link_to "View Movies", movies_path, class: 'btn btn-primary btn-md' %>
  <%= link_to "View Actors", actors_path, class: 'btn btn-primary btn-md' %>
  <%= link_to "View Directors", directors_path, class: 'btn btn-primary btn-md' %>
  <% if !user_signed_in? %>
    <%= link_to "Sign In", new_user_session_path, class: 'btn btn-primary btn-md' %>
    <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary btn-md' %>
  <% end %>
</div>